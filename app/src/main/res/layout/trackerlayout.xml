    <Button
        android:id="@+id/btReset"
        android:layout_width="142dp"
        android:layout_height="75dp"
        android:backgroundTint="#F25C05"
        android:text="reset"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/p1name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2name"
        app:layout_constraintVertical_bias="0.465" />

    <Button
        android:id="@+id/bthome"
        android:layout_width="142dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/white"
        android:text="HOME"
        android:textSize="24dp"
        android:textColor="#F25C05"
        app:layout_constraintBottom_toTopOf="@+id/p1name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2name"
        app:layout_constraintVertical_bias="0.465" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/p2minus"
        android:layout_width="85dp"
        android:layout_height="103dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#F2D022"
        android:clickable="true"
        android:rotationX="-180"
        android:rotationY="-180"
        app:fabCustomSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="55dp"
        app:srcCompat="@drawable/minus1" />

    <EditText
        android:id="@+id/p2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="177dp"
        android:rotationX="-180"
        android:rotationY="-180"
        android:text="Player 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/p2add"
        android:layout_width="85dp"
        android:layout_height="103dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#8E72F2"
        android:clickable="true"

        android:rotationX="-180"
        android:rotationY="-180"
        app:fabCustomSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="55dp"
        app:srcCompat="@drawable/plus1" />

    <TextView
        android:id="@+id/p2health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fromDegrees="180"
        android:rotationX="-180"
        android:rotationY="-180"
        android:text="20"
        android:textColor="@color/black"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/p2minus"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/p2add"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/p1minus"
        android:layout_width="85dp"
        android:layout_height="103dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="316dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#F2D022"
        android:clickable="true"
        app:fabCustomSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2minus"
        app:layout_constraintVertical_bias="0.637"
        app:maxImageSize="55dp"
        app:srcCompat="@drawable/minus1" />

    <EditText
        android:id="@+id/p1name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="220dp"
        android:text="Player 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/p1add"
        android:layout_width="85dp"
        android:layout_height="103dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="#8E72F2"
        android:clickable="true"
        app:fabCustomSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2add"
        app:maxImageSize="55dp"
        app:srcCompat="@drawable/plus1" />

    <TextView
        android:id="@+id/p1health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="20"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

